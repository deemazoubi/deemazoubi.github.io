  <script>
    let skillIndex = 0;

    const skills = document.querySelectorAll(".skill");

    function changeSkill(direction) {
      skills[skillIndex].style.opacity = 0; // Hide current skill
      skillIndex = (skillIndex + direction + skills.length) % skills.length; // Loop through skills
      skills[skillIndex].style.opacity = 1; // Show next skill
    }

    // Initial visibility
    skills[skillIndex].style.opacity = 1;
  </script>
</body>
